# Alicia Smart Home AI - Centralized Environment Configuration
# Copy this file to .env and configure your settings

# ===== PROJECT CONFIGURATION =====
PROJECT_NAME=alicia
PROJECT_VERSION=1.0.0
ENVIRONMENT=development
DEBUG_MODE=false

# ===== MQTT BROKER CONFIGURATION =====
# Central MQTT broker for all services
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=8883
MQTT_BROKER_URL=mqtts://localhost:8883
MQTT_USERNAME=alicia_user
MQTT_PASSWORD=alicia_password
MQTT_CLIENT_ID_PREFIX=alicia

# MQTT TLS configuration
MQTT_CA_CERT_PATH=./config/mqtt/ca.crt
MQTT_CLIENT_CERT_PATH=./config/mqtt/client.crt
MQTT_CLIENT_KEY_PATH=./config/mqtt/client.key

# ===== ALICIA CORE SERVICES =====
# Security Gateway
ALICIA_SECURITY_GATEWAY_URL=https://localhost:8443
ALICIA_SECURITY_GATEWAY_PORT=8443
JWT_SECRET=your_jwt_secret_here
SERVICE_TOKEN=your_service_token_here

# Service Registry
ALICIA_SERVICE_REGISTRY_URL=https://localhost:8080
ALICIA_SERVICE_REGISTRY_PORT=8080

# Device Registry
ALICIA_DEVICE_REGISTRY_URL=https://localhost:8081
ALICIA_DEVICE_REGISTRY_PORT=8081

# ===== ALICIA CONFIG MANAGER =====
ALICIA_CONFIG_MANAGER_PORT=3000
ALICIA_CONFIG_MANAGER_BACKEND_PORT=3001
ALICIA_CONFIG_MANAGER_LOG_LEVEL=INFO

# ===== ALICIA MONITOR =====
ALICIA_MONITOR_PORT=3002
ALICIA_MONITOR_PROXY_PORT=3003
ALICIA_MONITOR_LOG_LEVEL=INFO

# ===== MCP QA ORCHESTRATOR =====
# Cursor Orchestrator
CURSOR_ORCHESTRATOR_ID=cursor_orchestrator
CURSOR_ORCHESTRATOR_PORT=8080
CURSOR_LOG_LEVEL=INFO

# Cline Specialist
CLINE_SPECIALIST_ID=cline_specialist
CLINE_SPECIALIST_PORT=8081
CLINE_LOG_LEVEL=INFO

# Grok API (Free with Cline)
GROK_API_KEY=free_with_cline
GROK_BASE_URL=https://api.grok.com/v1
GROK_MODEL=grok-code-fast-1

# Quality Gate Thresholds
BDD_THRESHOLD=8.0
TEST_QUALITY_THRESHOLD=7.0
CODE_REVIEW_THRESHOLD=7.0
MAX_BUGS_THRESHOLD=3

# Task Management
MAX_ITERATIONS=3
TASK_TIMEOUT=300
RETRY_ATTEMPTS=3
HEARTBEAT_INTERVAL=30
MAX_CONCURRENT_TASKS=3

# ===== BUS SERVICES =====
# AI Service
AI_SERVICE_PORT=8001
AI_SERVICE_LOG_LEVEL=INFO

# Device Manager
DEVICE_MANAGER_PORT=8002
DEVICE_MANAGER_LOG_LEVEL=INFO

# Security Gateway
SECURITY_GATEWAY_PORT=8003
SECURITY_GATEWAY_LOG_LEVEL=INFO

# Voice Router
VOICE_ROUTER_PORT=8004
VOICE_ROUTER_LOG_LEVEL=INFO

# STT Service
STT_SERVICE_PORT=8005
STT_SERVICE_LOG_LEVEL=INFO

# TTS Service
TTS_SERVICE_PORT=8006
TTS_SERVICE_LOG_LEVEL=INFO

# Sonos Service
SONOS_SERVICE_PORT=8007
SONOS_SERVICE_LOG_LEVEL=INFO

# HA Bridge
HA_BRIDGE_PORT=8008
HA_BRIDGE_LOG_LEVEL=INFO

# ===== DATABASE CONFIGURATION =====
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=alicia
POSTGRES_USER=alicia_user
POSTGRES_PASSWORD=alicia_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=alicia_redis_password

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=./logs/alicia_system.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
LOG_CONSOLE_OUTPUT=true

# ===== OUTPUT CONFIGURATION =====
OUTPUT_BASE_DIR=./output
BDD_OUTPUT_DIR=./output/bdd_scenarios
TEST_OUTPUT_DIR=./output/test_files
REPORT_OUTPUT_DIR=./output/reports
PACKAGE_TESTS=true
INCLUDE_TIMESTAMPS=true

# ===== PERFORMANCE CONFIGURATION =====
MAX_CONCURRENT_AGENTS=4
MEMORY_LIMIT_MB=1024
CPU_LIMIT_PERCENT=80
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30

# ===== MONITORING CONFIGURATION =====
MONITORING_ENABLED=true
MONITORING_PORT=8082
HEALTH_CHECK_INTERVAL=30
METRICS_RETENTION_DAYS=7

# ===== SECURITY CONFIGURATION =====
ENABLE_TLS=true
ENABLE_AUTHENTICATION=true
ENABLE_ACL=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:8080,http://localhost:8081

# ===== DEVELOPMENT CONFIGURATION =====
HOT_RELOAD=false
MOCK_LLM_RESPONSES=false
ENABLE_METRICS=true
ENABLE_TRACING=true
PROFILE_PERFORMANCE=false

# ===== DOCKER CONFIGURATION =====
DOCKER_NETWORK=alicia_network
DOCKER_VOLUME_PREFIX=alicia
DOCKER_RESTART_POLICY=unless-stopped

# ===== EXTERNAL API KEYS =====
# OpenAI (if using OpenAI instead of Grok)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# xAI Grok (if using paid Grok API)
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1

# Home Assistant
HA_URL=http://localhost:8123
HA_TOKEN=your_ha_token_here

# Sonos
SONOS_IP=192.168.1.100
SONOS_PORT=1400




