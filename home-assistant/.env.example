# Home Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# Timezone Configuration
TIMEZONE=Europe/London

# Database Configuration (connects to existing PostgreSQL)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=alicia_db
POSTGRES_USER=alicia_user
POSTGRES_PASSWORD=your_secure_password_here

# MQTT Configuration (for future integration)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=alicia
MQTT_PASSWORD=your_mqtt_password_here

# Home Assistant Configuration
HA_LATITUDE=51.5074
HA_LONGITUDE=-0.1278
HA_ELEVATION=0
HA_UNIT_SYSTEM=metric
HA_TIME_ZONE=Europe/London

# Security Settings
HA_SECRET_KEY=your_random_secret_key_here
HA_API_PASSWORD=your_api_password_here

# Sonos Speaker Configuration
# Find your Sonos speaker IPs using: arp -a | grep sonos
# Or use Sonos app to identify IP addresses
SONOS_HOST_LIVING_ROOM=192.168.1.100
SONOS_HOST_KITCHEN=192.168.1.101
SONOS_HOST_BEDROOM=192.168.1.102

# Optional: External API Keys (for future integrations)
# OPENWEATHERMAP_API_KEY=your_api_key_here
# GROK_API_KEY=your_api_key_here
