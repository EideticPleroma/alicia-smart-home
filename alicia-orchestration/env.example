MCP_SERVER_PORT=4000

# Cline Configuration
CLINE_MODEL=grok-code-fast-1
CLINE_API_KEY=your_grok_api_key_here

# Alicia Project Integration
ALICIA_PROJECT_PATH=../
ALICIA_MQTT_BROKER=alicia_bus_core
