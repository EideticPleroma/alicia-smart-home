# ===========================================
# Alicia Smart Home AI Assistant - Environment Configuration
# ===========================================
# Copy this file to .env and update the values for your environment
# This template includes all required environment variables for the system

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
NODE_ENV=production
LOG_LEVEL=info
DEBUG=false

# ===========================================
# MQTT BROKER CONFIGURATION
# ===========================================
# MQTT Broker settings for all services
MQTT_BROKER=alicia_bus_core
MQTT_PORT=1883
MQTT_USERNAME=admin
MQTT_PASSWORD=alicia_admin_2024

# MQTT Security (for production)
MQTT_USE_TLS=false
MQTT_CA_CERT_PATH=./bus-config/certs/ca.crt
MQTT_CLIENT_CERT_PATH=./bus-config/certs/client.crt
MQTT_CLIENT_KEY_PATH=./bus-config/certs/client.key

# ===========================================
# AI SERVICE API KEYS
# ===========================================
# xAI Grok API Key (Primary AI provider)
GROK_API_KEY=your_grok_api_key_here

# OpenAI API Key (Fallback AI provider)
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Configuration
AI_DEFAULT_PROVIDER=grok
AI_MODEL=grok-beta
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# ===========================================
# VOICE PROCESSING CONFIGURATION
# ===========================================
# Speech-to-Text (STT) Configuration
STT_PROVIDER=whisper
STT_MODEL=medium
STT_LANGUAGE=en

# Google Cloud Speech (if using Google STT)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_CREDENTIALS_PATH=./config/google-credentials.json

# Azure Speech Services (if using Azure STT)
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=your_azure_region

# Text-to-Speech (TTS) Configuration
TTS_PROVIDER=piper
TTS_VOICE=en_US-lessac-medium
TTS_SPEED=1.0
TTS_PITCH=1.0

# Google Cloud TTS (if using Google TTS)
GOOGLE_TTS_CREDENTIALS_PATH=./config/google-credentials.json

# Azure TTS (if using Azure TTS)
AZURE_TTS_KEY=your_azure_tts_key
AZURE_TTS_REGION=your_azure_region

# ===========================================
# HOME ASSISTANT INTEGRATION
# ===========================================
# Home Assistant connection settings
HA_URL=http://homeassistant:8123
HA_TOKEN=your_home_assistant_token_here
HA_VERIFY_SSL=true

# ===========================================
# SONOS INTEGRATION
# ===========================================
# Sonos speaker configuration
SONOS_DISCOVERY_TIMEOUT=5
SONOS_DEFAULT_VOLUME=30
SONOS_DEFAULT_ROOM=Living Room

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite database settings
DATABASE_PATH=./data/alicia.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL=24

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT Secret for service authentication
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# Security settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS settings
CORS_ORIGIN=http://localhost:3002
CORS_CREDENTIALS=true

# ===========================================
# WEB INTERFACE CONFIGURATION
# ===========================================
# Config Manager Backend
CONFIG_MANAGER_PORT=3000
CONFIG_MANAGER_HOST=0.0.0.0

# Config Manager Frontend
FRONTEND_URL=http://localhost:3002
VITE_API_URL=http://localhost:3000
VITE_SOCKET_URL=http://localhost:3000

# Monitor Dashboard
MONITOR_PORT=3001
MONITOR_HOST=0.0.0.0

# ===========================================
# SERVICE PORTS
# ===========================================
# Core Services
SECURITY_GATEWAY_PORT=8080
DEVICE_REGISTRY_PORT=8081
DISCOVERY_SERVICE_PORT=8083
HEALTH_MONITOR_PORT=8084

# Configuration Services
CONFIG_SERVICE_PORT=8013
LOAD_BALANCER_PORT=8014
METRICS_COLLECTOR_PORT=8015
EVENT_SCHEDULER_PORT=8016
CONFIGURATION_MANAGER_PORT=8017

# Voice Processing Services
SERVICE_ORCHESTRATOR_PORT=8001
STT_SERVICE_PORT=8002
AI_SERVICE_PORT=8003
TTS_SERVICE_PORT=8004
VOICE_ROUTER_PORT=8005

# Device Services
SONOS_SERVICE_PORT=8006
DEVICE_MANAGER_PORT=8007
HA_BRIDGE_PORT=8008
DEVICE_CONTROL_PORT=8009

# AI and Integration Services
GROK_INTEGRATION_PORT=8010
PERSONALITY_SYSTEM_PORT=8011
MULTI_LANGUAGE_PORT=8012

# ===========================================
# MONITORING AND LOGGING
# ===========================================
# Logging configuration
LOG_FORMAT=json
LOG_FILE_PATH=./logs/alicia.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Metrics collection
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Development mode settings (set to false for production)
DEV_MODE=false
HOT_RELOAD=false
DEBUG_LOGGING=false

# Test configuration
TEST_MODE=false
MOCK_SERVICES=false

# ===========================================
# EXTERNAL INTEGRATIONS
# ===========================================
# Weather API (if using weather features)
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# News API (if using news features)
NEWS_API_KEY=your_news_api_key
NEWS_API_URL=https://newsapi.org/v2

# Calendar integration
CALENDAR_PROVIDER=google
GOOGLE_CALENDAR_CREDENTIALS_PATH=./config/google-calendar-credentials.json

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# Message queue settings
MQTT_QOS_LEVEL=1
MQTT_RETAIN_MESSAGES=true
MQTT_CLEAN_SESSION=true

# Service discovery
SERVICE_DISCOVERY_ENABLED=true
SERVICE_DISCOVERY_INTERVAL=30

# Load balancing
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK=true

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===========================================
# BACKUP AND RECOVERY
# ===========================================
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ===========================================
# NOTIFICATIONS
# ===========================================
# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=Alicia Smart Home <your_email@gmail.com>

# Push notifications
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=your_fcm_server_key

# ===========================================
# NOTES
# ===========================================
# 1. Replace all 'your_*_here' values with your actual API keys and credentials
# 2. For production, use strong, unique passwords and secrets
# 3. Enable TLS for MQTT in production (MQTT_USE_TLS=true)
# 4. Set NODE_ENV=production for production deployments
# 5. Configure proper CORS origins for your domain
# 6. Use environment-specific values for different deployments
